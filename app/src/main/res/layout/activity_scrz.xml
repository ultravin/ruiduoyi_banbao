<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.ruiduoyi.activity.ScrzActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/blue_sl_false">
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/cmdclose_sl"
                android:id="@+id/cancle_btn"
                android:layout_gravity="center_vertical|right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:textSize="30dp"
                android:text="生产日志"/>
        </FrameLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:background="@color/blue_sl_false"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:orientation="horizontal">
                    <TextView
                        android:background="@drawable/text_bg"
                        android:gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/black"
                        android:text="机台编号"/>
                    <TextView
                        android:background="@drawable/text_bg"
                        android:gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/black"
                        android:text="生产日期"/>
                    <TextView
                        android:background="@drawable/text_bg"
                        android:gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/black"
                        android:text="序号"/>
                    <TextView
                        android:background="@drawable/text_bg"
                        android:gravity="center"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/black"
                        android:text="指令名称"/>
                    <TextView
                        android:background="@drawable/text_bg"
                        android:gravity="center"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/black"
                        android:text="开始时间"/>
                    <TextView
                        android:background="@drawable/text_bg"
                        android:gravity="center"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/black"
                        android:text="结束时间"/>
                    <TextView
                        android:background="@drawable/text_bg"
                        android:gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/black"
                        android:text="用时(Min)"/>
                    <TextView
                        android:background="@drawable/text_bg"
                        android:gravity="center"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/black"
                        android:text="良品数量"/>
                    <TextView
                        android:background="@drawable/text_bg"
                        android:gravity="center"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/black"
                        android:text="不良数量"/>
                    <TextView
                        android:background="@drawable/text_bg"
                        android:gravity="center"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/black"
                        android:text="产出数量"/>
                    <TextView
                        android:background="@drawable/text_bg"
                        android:gravity="center"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/black"
                        android:text="成型周期"/>
                    <TextView
                        android:background="@drawable/text_bg"
                        android:gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/black"
                        android:text="开始人员"/>
                    <TextView
                        android:background="@drawable/text_bg"
                        android:gravity="center"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/black"
                        android:text="结束人员"/>
                    <TextView
                        android:background="@drawable/text_bg"
                        android:gravity="center"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/black"
                        android:text="制造单号"/>
                    <TextView
                        android:background="@drawable/text_bg"
                        android:gravity="center"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/black"
                        android:text="工单单号"/>
                    <TextView
                        android:background="@drawable/text_bg"
                        android:gravity="center"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/black"
                        android:text="生产批号"/>
                    <TextView
                        android:background="@drawable/text_bg"
                        android:gravity="center"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/black"
                        android:text="产品编号"/>
                    <TextView
                        android:background="@drawable/text_bg"
                        android:gravity="center"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/black"
                        android:text="品名规格"/>
                    <TextView
                        android:background="@drawable/text_bg"
                        android:gravity="center"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/black"
                        android:text="模具编号"/>
                    <TextView
                        android:background="@drawable/text_bg"
                        android:gravity="center"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/black"
                        android:text="模具名称"/>
                </LinearLayout>
                <ListView
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:divider="@color/touming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/b6_list"></ListView>
            </LinearLayout>
        </HorizontalScrollView>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/ok_btn"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:text="确定"
                android:background="@drawable/blue_btn_sl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:text="取消"
                android:background="@drawable/blue_btn_sl"
                android:layout_marginLeft="1dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
