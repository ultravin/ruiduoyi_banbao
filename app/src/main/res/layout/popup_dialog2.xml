<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="500dp"
    android:layout_height="400dp"
    android:background="@color/lable">
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="23dp"
        android:text="温馨提示"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"></LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"></FrameLayout>
    <TextView
        android:textSize="23dp"
        android:textColor="@android:color/holo_red_dark"
        android:id="@+id/msg_text"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务器连接异常"
        android:layout_gravity="left"/>
    <LinearLayout
        android:layout_marginBottom="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/jtbh_tip"
            android:visibility="invisible"
            android:textSize="23dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:text="机台编号"/>
        <Button
            android:text="选择机台号"
            android:id="@+id/spinner_btn"
            android:layout_width="200dp"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:textSize="23dp"
            android:background="@drawable/spnner_bg"
             />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="重新连接"
            android:textSize="18dp"
            android:id="@+id/again_btn"
            android:layout_gravity="right"/>
        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="退出系统"
            android:textSize="18dp"
            android:id="@+id/cancle_btn"
            android:layout_gravity="left"/>

    </LinearLayout>

</LinearLayout>