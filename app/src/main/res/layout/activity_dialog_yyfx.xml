<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ruiduoyi.activity.BlYyfxActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#99ccff">

       <LinearLayout
           android:layout_marginRight="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_gravity="center_vertical|right">
           <Button
               android:id="@+id/save_btn"
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:layout_marginRight="20dp"
               android:background="@drawable/save_sl" />
           <Button
               android:id="@+id/cancle_btn"
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:layout_gravity="center_vertical|right"
               android:layout_marginRight="20dp"
               android:background="@drawable/cmdclose_sl" />
       </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/title"
            android:textColor="@android:color/white"
            android:textSize="30dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="7dp"
                android:text="实际上线"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/dq_1"
                android:layout_width="@dimen/blyyfx_text_width"
                android:layout_height="36dp"
                android:layout_margin="3dp"
                android:background="@drawable/text_bg"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="7dp"
                android:text="制造单号"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/dq_2"
                android:layout_width="@dimen/blyyfx_text_width"
                android:layout_height="36dp"
                android:layout_margin="3dp"
                android:background="@drawable/text_bg"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="7dp"
                android:text="工单单号"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/dq_3"
                android:layout_width="@dimen/blyyfx_text_width"
                android:layout_height="36dp"
                android:layout_margin="3dp"
                android:background="@drawable/text_bg"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="7dp"
                android:text="生产批号"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/dq_4"
                android:layout_width="@dimen/blyyfx_text_width"
                android:layout_height="36dp"
                android:layout_margin="3dp"
                android:background="@drawable/text_bg"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="7dp"
                android:text="模具编号"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/dq_5"
                android:layout_width="@dimen/blyyfx_text_width"
                android:layout_height="36dp"
                android:layout_margin="3dp"
                android:background="@drawable/text_bg"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="7dp"
                android:text="模具名称"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/dq_6"
                android:layout_width="@dimen/blyyfx_text_width"
                android:layout_height="36dp"
                android:layout_margin="3dp"
                android:background="@drawable/text_bg"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="7dp"
                android:text="产品编号"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/dq_7"
                android:layout_width="@dimen/blyyfx_text_width"
                android:layout_height="36dp"
                android:layout_margin="3dp"
                android:background="@drawable/text_bg"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="7dp"
                android:text="品名规格"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/dq_8"
                android:layout_width="@dimen/blyyfx_text_width"
                android:layout_height="36dp"
                android:layout_margin="3dp"
                android:background="@drawable/text_bg"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size" />
        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="7dp"
                android:text="计划数量"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/dq_9"
                android:layout_width="@dimen/blyyfx_text_width"
                android:layout_height="36dp"
                android:layout_margin="3dp"
                android:background="@drawable/text_bg"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="7dp"
                android:text="良品数量"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/dq_10"
                android:layout_width="@dimen/blyyfx_text_width"
                android:layout_height="36dp"
                android:layout_margin="3dp"
                android:background="@drawable/text_bg"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="7dp"
                android:text="不良数量"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/dq_11"
                android:layout_width="@dimen/blyyfx_text_width"
                android:layout_height="36dp"
                android:layout_margin="3dp"
                android:background="@drawable/text_bg"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <LinearLayout
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="7dp"
                android:text="品名规格"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:layout_width="@dimen/blyyfx_text_width"
                android:layout_height="36dp"
                android:layout_margin="3dp"
                android:background="@drawable/text_bg"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size" />
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/yyfx_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/g_true">

            <TextView
                android:id="@+id/yyfx_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="原因分析"
                android:textColor="@android:color/white"
                android:textSize="25dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/blfx_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/g_false">

            <TextView
                android:id="@+id/blfx_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="不良分析"
                android:textColor="@color/color_9"
                android:textSize="25dp" />
        </FrameLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/viewPager"></android.support.v4.view.ViewPager>
</LinearLayout>
