<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/color_9"
    tools:context="com.ruiduoyi.Fragment.ManageFragment">

    <!-- TODO: Update blank fragment layout -->
    <!--<com.ruiduoyi.view.CustomViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewPager"></com.ruiduoyi.view.CustomViewPager>-->
    <FrameLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
    <FrameLayout
        android:visibility="gone"
        android:id="@+id/layout_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
    <FrameLayout
        android:layout_marginLeft="55dp"
        android:visibility="gone"
        android:id="@+id/layout_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
    <FrameLayout
        android:layout_marginLeft="10dp"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:id="@+id/card_1"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#7ec3da">
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ems="1"
                    android:textSize="20dp"
                    android:textColor="@android:color/white"
                    android:text="工艺参数"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_2"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#e9b640">
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ems="1"
                    android:textSize="20dp"
                    android:textColor="@android:color/white"
                    android:text="作业标准"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_3"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#a2c466">
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ems="1"
                    android:textSize="20dp"
                    android:textColor="@android:color/white"
                    android:text="OE E分析"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </FrameLayout>
</FrameLayout>
